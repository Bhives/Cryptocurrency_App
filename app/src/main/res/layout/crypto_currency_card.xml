<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_margin_from_card">

    <ImageView
        android:id="@+id/symbolImageView"
        android:layout_width="@dimen/currency_icon_size"
        android:layout_height="@dimen/currency_icon_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/currency_icon_size"
            android:text="name"
            android:layout_marginStart="@dimen/currency_icon_size" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/currency_icon_size"
            android:text="price"
            android:layout_marginStart="@dimen/currency_icon_size" />

        <TextView
            android:id="@+id/marketCapTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/currency_icon_size"
            android:text="marketCap"
            android:layout_marginStart="@dimen/currency_icon_size" />

        <TextView
            android:id="@+id/volume24HTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/currency_icon_size"
            android:text="volume24h"
            android:layout_marginStart="@dimen/currency_icon_size" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/card_margin_from_card"
            android:background="@color/light_grey">

            <TextView
                android:id="@+id/label1HTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_1h"
                app:layout_constraintEnd_toStartOf="@+id/percentChange1HTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/percentChange1HTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/percentChange24HTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label24HTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_24h"
                app:layout_constraintEnd_toStartOf="@+id/percentChange24HTextView"
                app:layout_constraintStart_toEndOf="@+id/percentChange1HTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/percentChange24HTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/label7DTextView"
                app:layout_constraintStart_toEndOf="@+id/label24HTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label7DTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_7d"
                app:layout_constraintStart_toEndOf="@+id/percentChange24HTextView"
                app:layout_constraintEnd_toStartOf="@+id/percentChange7DTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/percentChange7DTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/label7DTextView"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>