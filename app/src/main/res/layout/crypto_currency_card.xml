<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/symbolImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price" />

        <TextView
            android:id="@+id/marketCapTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="marketCap" />

        <TextView
            android:id="@+id/volume24HTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="volume24h" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/card_margin_from_card"
            android:background="@color/light_grey">

            <TextView
                android:id="@+id/textView1HTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView1h"
                app:layout_constraintEnd_toStartOf="@+id/textView24HTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView24HTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView24h"
                app:layout_constraintEnd_toStartOf="@+id/textView7DTextView"
                app:layout_constraintStart_toEndOf="@+id/textView1HTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7DTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView7d"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView24HTextView"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>