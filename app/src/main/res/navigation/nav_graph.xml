<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.vironit.garbuzov_cryptocurrency.ui.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_cryptoCurrenciesFragment"
            app:destination="@id/cryptoCurrenciesFragment" />
    </fragment>

    <fragment
        android:id="@+id/cryptoCurrenciesFragment"
        android:name="com.vironit.garbuzov_cryptocurrency.ui.fragments.CryptoCurrenciesFragment"
        android:label="fragment_crypto_currencies"
        tools:layout="@layout/fragment_crypto_currencies" >
        <action
            android:id="@+id/action_cryptoCurrenciesFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>